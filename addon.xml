<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.skinfont"
    name="Skin Font" version="1.0.2" provider-name="taxigps">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py"> 
     <provides>executable</provides> 
  </extension> 
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Add Arial skin fontset</summary>
    <summary lang="zh">为皮肤增加Arial字体</summary>
    <description lang="en">Add Arial skin fontset</description>
    <description lang="zh">有些皮肤使用的字体文件中没有汉字造成中文无法显示，本插件可为此类皮肤增加支持中文显示的Arial字体选项。</description>
    <platform>all</platform>
    <language></language>
  </extension>
</addon>
